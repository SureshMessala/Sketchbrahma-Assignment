
<% projects.each do |project| %>
  <div class="col-sm-3 single-post-card" id=<%= project_path(project.id) %>>
    <div class="card">
      <h4><%= truncate(project.name, :length => 60) %></h4>
      <div class="posted-by">Project by <%= project.user.name %></div>
      <p><%= project.description %></p>
      <%= link_to "View Tasks", project_path(project.id), class: 'interested' %>
    </div>
  </div>
<% end %>